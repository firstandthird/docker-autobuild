#!/bin/bash

#build repo
BUILDER="firstandthird/builder:0.0.12"
docker pull $BUILDER > /dev/null 2>&1
if [[ "$?" != 0 ]]; then
  echo "error pulling image"
  exit 1
fi
IMAGE=$(docker run \
  --rm \
  -e USER=$GITHUB_USER \
  -e REPO=$GITHUB_REPO \
  -e BRANCH=$GITHUB_BRANCH \
  -e TOKEN=$GITHUB_TOKEN \
  -e TAG=$DOCKER_TAG \
  -e PUSH=1 \
  -e PUSH_LATEST=1 \
  -e REGISTRY=$REGISTRY \
  -e DOCKER_AUTH=$DOCKER_AUTH \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v /repos:/repos \
  ${BUILDER})

if [[ "$?" != 0 ]]; then
  echo "there was an error building"
  echo $IMAGE
  #post2slack --tags error --message "$GITHUB_REPO#$GITHUB_BRANCH failed to build $IMAGE"
  exit 1
fi
echo $IMAGE
