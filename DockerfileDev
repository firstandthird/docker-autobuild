FROM firstandthird/node:8.9-2-onbuild

USER root
RUN apk add --update docker curl bash py-pip curl-dev

RUN pip install docker-compose

RUN curl https://raw.githubusercontent.com/firstandthird/docker-builder/be4b9a4ad5758b31110fbd00ffb62af6c22aa232/builder > /home/app/builder
RUN chmod +x /home/app/builder

ENV PORT=8080
ENV SECRET=""
ENV GITHUB_TOKEN=""
ENV REPOS=/home/app/src/repos

EXPOSE 8080
